<h2>Edit Comment</h2>

<%= form_with(model: [@task, @comment], url: task_comment_path(@task, @comment), method: :patch) do |f| %>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit "Update Comment" %>
  </div>
<% end %>

