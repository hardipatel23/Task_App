<h2>Task List</h2>
 
  <table class="table table-info table-striped">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>status</th>
        <th>Assignee</th>
        <th>Approver</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Repeat Task</th>
        <th>Frequency</th>
        <th>Due Date</th>
        <th>Actions</th>
      </tr>
    <tbody>
      <% @tasks.each do |task| %>
        <% if task.assignee == current_user || task.approver == current_user || current_user.organization_admin? %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.description %></td>
            <td><%= task.status %></td>
            <td><%= task.assignee.name %></td>
            <td><%= task.approver.name %></td>
            <td><%= task.start_date %></td>
            <td><%= task.end_date %></td>
            <td><%= task.repeat_task %></td>
            <td><%= task.frequency %></td>
            <td><%= task.due_date %></td>
            <td>
              <%= link_to 'Show', task %>
              <% if task.assignee == current_user || task.approver == current_user || current_user.organization_admin? %>
                <%= link_to 'Edit', edit_task_path(task) %>
                <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
              <% end %>
              <%= link_to 'Add Comment', new_task_comment_path(task), id: 'add-comment-link', remote: true %>
            </td>
          </tr>
        <% end%>
      <% end %>
    </tbody>
  </table>


<div id="comments-container"> </div>

<%= javascript_include_tag 'comments' %>

